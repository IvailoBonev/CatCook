{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SassCompiler": {
    "Source": "Styles",
    "Target": "wwwroot/css",
    "Arguments": "--style=compressed",
    "GenerateScopedCss": true,
    "ScopedCssFolders": [
      "Views",
      "Pages",
      "Shared",
      "Components"
    ],
    "IncludePaths": [],
    "Compilations": [
      {
        "Source": "wwwroot/lib/bootstrap/sass/main.scss",
        "Target": "wwwroot/css/site.css"
      },
      {
        "Source": "wwwroot/lib/bootstrap/sass/main-white.scss",
        "Target": "wwwroot/css/site-white.css"
      }
    ]
  }
}