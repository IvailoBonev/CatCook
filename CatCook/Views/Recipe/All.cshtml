@model IEnumerable<RecipeHomeModel>

@{
    ViewBag.Title = "Всички Рецепти";
}

<div class="card-deck row">
    <h1 class="text-center" style="margin-top: 10rem ; margin-bottom: 3rem;">Всички Рецепти</h1>
    @foreach (var recipe in Model)
    {
        <div class="card col-3 recipe" style="max-width: 285px;">
            <div class="position-relative">
                <p class="rounded p-2 m-2 fs-6 position-absolute" style="background-color: darkorange; text-align: center; color: white; font-weight: bold; max-width: 140px">@recipe.CategoryName</p>
                @if (recipe.Images.Any())
                {
                    <div class="card-img-top">
                        <img class="card-img-top" style="width: 260px; height: 250px;" src="@recipe.Images.First().ImageUrl" alt="First image">
                    </div>
                }
                else
                {
                    <div class="card-img-top">
                        <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" alt="First slide">
                    </div>
                }
            </div>
            <div class="card-body">
                <h5 class="card-title">@recipe.Name</h5>
                <p class="card-text">Трудност: @recipe.DifficultyName<br />Публикувано на: @recipe.DateAdded<br />От <b>@@@recipe.UserName</b></p>
                <p class="card-text"><i class="fa-solid fa-star text-warning"></i> <b>@recipe.Rating.ToString("F2")</b></p>
                <a href="#" class="btn btn-primary">Сготви</a>
            </div>
        </div>
    }
</div>