@model RecipeHomeModel

<div class="position-relative">
    <p class="rounded p-2 m-2 fs-6 position-absolute" style="background-color: darkorange; text-align: center; color: white; font-weight: bold; max-width: 140px">@Model.CategoryName</p>
    @if (!(Model.ImageUrl == string.Empty))
    {
        <div class="card-img-top" style="width: 255px; height: 250px; ">
            <img class="card-img-top" style="width: 255px; height: 250px; object-fit: cover;" src="@Model.ImageUrl" alt="Recipe image">
        </div>
    }
    else
    {
        <div class="card-img-top">
            <img class="card-img-top" src="~/img/No_Image_Available.jpg" alt="Recipe image" style="width: 260px; height: 250px; object-fit: cover;">
        </div>
    }
</div>
<div class="card-body">
    <h5 class="card-title">@Model.Name
        @if (Model.IsPrivate)
        {
            <span class="text-secondary"><b>Частна</b></span>
        }
    </h5>
    <p class="card-text">Трудност: @Model.DifficultyName<br />Публикувано на: @Model.DateAdded<br />От @@<b>@Model.UserName</b></p>
    <p class="card-text"><i class="fa-solid fa-star text-warning"></i> <b>@Model.Rating.ToString("F2")</b></p>
    <a asp-area="" asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Сготви</a>
</div>
